@model List<Flower_Shop.Models.Entities.Order>

@{
    ViewData["Title"] = "OrderList";
}

@{
    var i = 1;
}

<div class="container">
    <br /><h3>OrderList</h3>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>FullName</th>
                <th>Address</th>
                <th>PostalCode</th>
                <th>PhoneNumber</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@order.FullName</td>
                    <td>@order.Address</td>
                    <td>@order.PostalCode</td>
                    <td>@order.PhoneNumber</td>
                    <td>@order.Price</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@order.OrderId" class="btn btn-danger">Delete</a>
                        <a asp-action="Edit" asp-route-id="@order.OrderId" class="btn btn-primary">Edit</a>
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
</div>
